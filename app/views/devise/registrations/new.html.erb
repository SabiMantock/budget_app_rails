

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<header class="text-white" style="background: #3778c2">
  <nav class="d-flex justify-content-between p-2 align-items-center text-reset">   
    <a href='/'><i class="fas fa-arrow-left fs-1 text-white"></i></a>
    <h2 class="m-0 p-0">REGISTER</h2>
    <%= f.submit "NEXT", class: "nav-link" %>
  </nav> 
</header>
  <%= render "devise/shared/error_messages", resource: resource %>

  
  <div class="field mt-3">
    
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full name", class: "form-control rounded-0" %>
  </div>

  <div class="field mt-3">
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control rounded-0" %>
  </div>

  <div class="field mt-3">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control rounded-0" %>
  </div>

  <div class="field mt-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-control rounded-0" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
